---
import ButtonLink from "./ButtonLink.astro";
import Section from "./Section.astro";
import site from "../data/site.json";
---
<Section>  
  <header id="header">
    <div class="content">
      <h1>
      <span>Hi, I am {site.name}.</span>
        <span><span class="accent">{site.rolePrefix}</span> {site.roleHighlight}</span>
      </h1>
      <p class="description">
        {site.description}
      </p>
      <div class="button-container">
         <ButtonLink href={site.projectsPath} text={site.ctaPrimary} variant='secondary' />
         <ButtonLink href={site.resumePath} text={site.ctaSecondary} isDownload={true}/>
      </div>
    </div>
    <img src={site.image} alt={site.name} />
  </header>
</Section>

<style>
   #header {
    display: grid;
    grid-template-columns: 540px 1fr;
    justify-items: center;
    gap: 80px;
    align-items: center;

    h1 {
      font-size: 44px;
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;

      .accent {
        color: var(--primary);
      }
    }

    .button-container {
      display: flex;
      gap: 10px;
    }

    .description {
      line-height: 28px;
      color: var(--dark);
      margin-bottom: 30px;
    }
    img {
      height: 244px;
      border-radius: 12px;
    }
    @media (max-width: 1000px) {
      & {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 40px;

        img {
          grid-row: 1;
        }
      }
    }

    @media (max-width: 600px) {
      .button-container {
        flex-direction: column;
      }
    }
  }

 
</style>